<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#77000000"
    android:gravity="center"
    tools:context=".ContactDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:background="@drawable/shape_dialog_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <RadioGroup
        android:id="@+id/btn_alert_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <RadioButton
            android:id="@+id/btn_alert_dialog1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="@drawable/sel_btn_detail_bg"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="5초뒤"
            android:textColor="@drawable/sel_btn_detail_text"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/btn_alert_dialog2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="@drawable/sel_btn_detail_bg"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="하루전"
            android:textColor="@drawable/sel_btn_detail_text" />

        <RadioButton
            android:id="@+id/btn_alert_dialog3"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:background="@drawable/sel_btn_detail_bg"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="당일"
            android:textColor="@drawable/sel_btn_detail_text" />

    </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
