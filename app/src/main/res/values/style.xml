<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Contact Detail Title-->
    <style name="detail_title">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--Contact Detail Data-->
    <style name="detail_data">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Contact Detail Button-->
    <style name="detail_btn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_btn_detail_bg</item>
        <item name="android:textColor">@drawable/sel_btn_detail_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
</resources>