<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Contact Detail Title-->
    <style name="detail_title">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--Contact Detail Data-->
    <style name="detail_data">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Contact Detail Button-->
    <style name="detail_btn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/sel_btn_detail_bg</item>
        <item name="android:textColor">@drawable/sel_btn_detail_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Contact Detail Gift Dialog-->
    <style name="detail_dialog_gift" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="colorSurface">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:dialogCornerRadius">20dp</item>
    </style>
        <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
            <item name="android:textColor">@color/primary</item>
            <item name="android:textSize">14sp</item>
            <item name="android:icon">@drawable/icon_star</item>
            <item name="rippleColor">@color/primary</item>

        </style>

    <!-- Contact Detail Alert Dialog-->
    <style name="detail_dialog_alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
        <item name="android:dialogCornerRadius">20dp</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/primary</item>
    </style>
    <style name="NeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/white</item>
    </style>



    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/highlight</item>
    </style>
</resources>